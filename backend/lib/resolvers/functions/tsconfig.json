{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2015",
    "lib": [
      "ES2015"
    ],
    "rootDir": "./",
    "outDir": "build",
    "skipLibCheck": false,
    "declaration": false,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": false,
    "inlineSources": false,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "./../../../node_modules/@types"
    ],
    "moduleResolution": "Node"
  },
  "include": [
    "./**/*",
  ],
  "exclude": [
    "build",
    "API.ts"
  ]
}
